---
import { classes } from '../../data/classes';
import Layout from '../../layouts/Layout.astro';
import { Button } from '@/components/ui/button';
import { Image } from 'astro:assets';
import {
  Table,
  TableBody,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from "@/components/ui/table";

// Import images for optimization
import babiesImg from '../../images/classes-headers/Babies.png';
import kindergymImg from '../../images/classes-headers/Kindergym.png';
import gymnasticsImg from '../../images/classes-headers/Gymnastics-6+.png';
import ninjasImg from '../../images/classes-headers/Ninjas.png';
import openGymImg from '../../images/classes-headers/Open-Gym.png';

export function getStaticPaths() {
  return classes.map((classItem) => ({
    params: { class: classItem.class },
    props: { classData: classItem }
  }));
}

const { classData } = Astro.props;

// Map class types to imported images
const imageMap = {
  'baby': babiesImg,
  'kindergym': kindergymImg,
  'gymnastics': gymnasticsImg,
  'ninjas': ninjasImg,
  'open-gym': openGymImg
};

const heroImage = imageMap[classData.class as keyof typeof imageMap];

// Group schedules by age range and description to create subclasses
const groupedSchedules = classData.schedules.reduce((acc, schedule) => {
  const key = `${schedule.ageRange}|${schedule.description}`;
  if (!acc[key]) {
    acc[key] = {
      ageRange: schedule.ageRange,
      description: schedule.description,
      schedules: []
    };
  }
  acc[key].schedules.push(schedule);
  return acc;
}, {} as Record<string, { ageRange: string; description: string; schedules: typeof classData.schedules }>);

const subclasses = Object.values(groupedSchedules);
---

<Layout>
  <!-- Hero Section with Image -->
  <section class="relative h-[50vh] min-h-80 w-full overflow-hidden">
    <Image 
      src={heroImage} 
      alt={classData.title} 
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/40"></div>
    
    <div class="relative z-10 flex flex-col items-center justify-center h-full text-center px-8">
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-background mb-4">
        {classData.title}
      </h1>
      <p class="text-xl sm:text-2xl text-background/90 max-w-3xl">
        Ages {classData.ageRange}
      </p>
    </div>
  </section>

  <!-- Description Section -->
  <section class="wrapper py-12">
    <div class="max-w-4xl mx-auto">
      <p class="text-lg sm:text-xl text-muted-foreground leading-relaxed text-center">
        {classData.description}
      </p>
    </div>
  </section>

    <!-- Important Info -->
      <div class="mt-12 bg-primary/10 border border-primary/20 rounded-lg p-6 max-w-4xl mx-auto">
        <h3 class="text-xl font-bold mb-4 text-center">Important Information</h3>
        <ul class="space-y-2 text-muted-foreground">
          <li>✓ <span class="font-semibold">Tuition is monthly</span> based on 4 classes/month</li>
          <li>✓ <span class="font-semibold">100% Guarantee</span> on all classes after your 1st class!</li>
          <li>✓ <span class="font-semibold">$30 Annual Membership</span> (includes t-shirt or onesie)</li>
          <li>✓ <span class="font-semibold">First class is FREE!</span> No commitment required</li>
        </ul>
      </div>

  <!-- Schedule Section -->
  <section class="wrapper py-12 bg-muted/30">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-4xl font-bold text-center mb-12">
        Class Schedule & Pricing
      </h2>

      {classData.schedules.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-lg text-muted-foreground">
            Schedule coming soon! Contact us for more information.
          </p>
        </div>
      ) : (
        <div class="space-y-12">
          {subclasses.map((subclass, idx) => (
            <div class="bg-card rounded-lg shadow-lg overflow-hidden">
              {/* Subclass Header */}
              <div class="bg-linear-to-t from-secondary/20 to-primary/10 px-6 py-4 border-b border-border">
                <h3 class="text-2xl font-bold">{subclass.schedules[0].name}</h3>
                <p class="text-muted-foreground mt-1">Ages: {subclass.ageRange}</p>
                <p class="text-foreground font-semibold mt-1">
                  {subclass.schedules[0].price === 0 ? (
                    <span class="text-accent">FREE - No Tuition Required!</span>
                  ) : (
                    `$${subclass.schedules[0].price}/month`
                  )}
                </p>
              </div>

              {/* Schedule Table */}
              <Table>
                <TableHeader>
                  <TableRow className="bg-muted/50">
                    <TableHead className="font-bold">Day</TableHead>
                    <TableHead className="font-bold">Time</TableHead>
                    <TableHead className="font-bold">Instructor</TableHead>
                    <TableHead></TableHead>
                  </TableRow>
                </TableHeader>
                <TableBody>
                  {subclass.schedules.map((schedule, scheduleIdx) => (
                    <TableRow key={scheduleIdx} className={schedule.status === 'waitlist' ? 'bg-destructive/5' : ''}>
                      <TableCell>
                        <Button 
                          size="sm" 
                          variant={schedule.status === 'waitlist' ? 'outline' : 'accent'}
                          className={schedule.status === 'waitlist' ? 'border-destructive text-destructive hover:bg-destructive/10' : ''}
                        >
                          <a href={schedule.registrationLink || '/sign-up'}>
                            {schedule.status === 'waitlist' ? 'Join Waitlist' : 'Register'}
                          </a>
                        </Button>
                      </TableCell>
                      <TableCell className="font-medium">{schedule.day}</TableCell>
                      <TableCell>{schedule.time}</TableCell>
                      <TableCell className="text-sm">{schedule.instructor}</TableCell>
                    </TableRow>
                  ))}
                </TableBody>
              </Table>
            </div>
          ))}
        </div>
      )}
  </section>
</Layout>