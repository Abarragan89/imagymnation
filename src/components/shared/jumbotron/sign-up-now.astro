---
import { Button } from '@/components/ui/button'
const BASE_URL = import.meta.env.BASE_URL;
---
<section class="relative mt-14">
    <!-- Sunset Gradient Background -->
    <div class="absolute inset-0 bg-linear-to-b from-destructive via-secondary to-primary"></div>
    
    <!-- Content -->
    <div class="relative z-10 max-w-4xl mx-auto text-center mt-3 py-10">
        <h2 class="text-4xl sm:text-5xl font-bold text-background mb-4">
            Start Your Journey Today!
        </h2>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a href={`https://app.jackrabbitclass.com/regv2.asp?id=507391`} rel="noopener noreferrer" target="_blank">
                <Button size="lg" variant="accent" className="text-lg">
                        Register Now
                </Button>
            </a>
        </div>

        <p class="mt-10 text-accent font-bold">
            First class is FREE! No commitment required.
        </p>
    </div>
</section>